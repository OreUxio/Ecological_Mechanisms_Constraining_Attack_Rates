journal = {J. Theor. Biol.},
keywords = {,Assembly dynamics,Community food web,Network structure,Trophic generality,Trophic interaction},
number = {3},
pages = {601--612},
pmid = {19375432},
title = {{Community assembly, stability and signatures of dynamical constraints on food web structure}},
volume = {259},
year = {2009}
}
