file = {:home/ore/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Wei et al. - 2015 - Testing the Generalist-Specialist Dilemma The Role of Pyrrolizidine Alkaloids in Resistance to Invertebrate Herbivor.pdf:pdf},
issn = {15731561},
journal = {J. Chem. Ecol.},
keywords = {Deroceras invadens,F2 hybrids,Feeding damage,Jacobaea vulgaris,Longitarsus jacobaeae,Secondary metabolites diversity},
